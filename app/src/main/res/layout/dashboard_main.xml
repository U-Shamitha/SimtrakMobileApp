                                    android:textSize="15sp"
                                    android:textStyle="italic" />

                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <TextView
                                    android:id="@+id/WCat"
                                    android:layout_width="75pt"
                                    android:layout_height="wrap_content"
                                    android:text="Category"
                                    android:textSize="15sp"
                                    android:textStyle="bold"/>

                                <TextView
                                    android:id="@+id/WCati"
                                    android:layout_width="75pt"
                                    android:layout_height="wrap_content"
                                    android:text="Category"
                                    android:textSize="15sp"
                                    android:textStyle="italic" />

                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <TextView
                                    android:id="@+id/WDes"
                                    android:layout_width="75pt"
                                    android:layout_height="wrap_content"
                                    android:text="Name"
                                    android:textSize="15sp"
                                    android:textStyle="bold"/>

                                <TextView
                                    android:id="@+id/WDesi"
                                    android:layout_width="75pt"
                                    android:layout_height="wrap_content"
                                    android:text="name"
                                    android:textSize="15sp"
                                    android:textStyle="italic" />

                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <TextView
                                    android:id="@+id/WQua"
                                    android:layout_width="75pt"
                                    android:layout_height="wrap_content"
                                    android:text="Deadline"
                                    android:textSize="15sp"
                                    android:textStyle="bold"/>

                                <TextView
                                    android:id="@+id/WQuai"
                                    android:layout_width="75pt"
                                    android:layout_height="wrap_content"
                                    android:text="deadline"
                                    android:textSize="15sp"
                                    android:textStyle="italic" />

                            </LinearLayout>
                            <LinearLayout
