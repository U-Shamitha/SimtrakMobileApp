                                    android:layout_width="75pt"
                                    android:layout_height="wrap_content"
                                    android:text="assigned by"
                                    android:textSize="15sp"
                                    android:textStyle="italic" />

                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>


        </LinearLayout>

    </LinearLayout>

