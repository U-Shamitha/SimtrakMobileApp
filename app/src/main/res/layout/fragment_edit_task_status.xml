<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.home.DashboardAddTaskFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbarThumbVertical="@android:color/transparent">

        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="40dp"
            android:elevation="10dp"
            android:translationZ="10dp"
            android:outlineSpotShadowColor="@color/my_primary_color_dark"
            android:outlineAmbientShadowColor="@color/my_primary_color_dark">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:gravity="center_vertical"
                    android:background="@drawable/slg3">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Edit Task Status"
                        android:textSize="20sp"
                        android:textColor="@color/white"
                        android:paddingLeft="20dp"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/taskStatus_tl"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:textColorHint="@color/dark_grey"
                        app:boxStrokeColor="@color/my_primary_color"
                        app:startIconContentDescription="Link Type"
                        app:startIconDrawable="@drawable/baseline_category_24"
                        app:startIconTint="@color/dark_grey">

                        <androidx.appcompat.widget.AppCompatAutoCompleteTextView
                            android:id="@+id/taskStatus_atv"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentTop="true"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="65dp"
                            android:editable="false"
                            android:hint="Link Type"
                            android:textSize="16dp" />

                    </com.google.android.material.textfield.TextInputLayout>



                    <TextView
                        android:id="@+id/errorMsg_tv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Error message appear here"
                        android:textColor="@color/red"
                        android:textAlignment="center"
                        android:visibility="gone"
                        android:layout_marginTop="15dp"
                        />

                    <Button
                        android:id="@+id/editTaskStatus_btn"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="SUBMIT"
                        android:textSize="16dp"
                        android:textAlignment="center"
                        android:fontFamily="sans-serif"
                        android:layout_marginVertical="20dp"
                        android:layout_marginHorizontal="20dp"
                        app:backgroundTint="@color/my_primary_color_dark"
                        app:background="@drawable/rounded_button"/>







                </LinearLayout>

            </LinearLayout>



        </androidx.cardview.widget.CardView>

    </LinearLayout>

    </ScrollView>



</LinearLayout>