<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_gravity="center"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_margin="10dp"
        android:elevation="5dp"
        android:translationZ="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius = "7dp"
        app:cardUseCompatPadding= "true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginHorizontal="20dp"
            android:layout_marginBottom="10dp">

<!--            <TextView-->
<!--                android:id="@+id/name_tv"-->
<!--                android:layout_width="wrap_content"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:layout_centerVertical="true"-->
<!--                android:text="Task Name"-->
<!--                android:textColor="@color/my_primary_color"-->
<!--                android:textSize="18sp" />-->

            <Button
                android:id="@+id/menu"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/ic_baseline_more_vert_24" />

        </RelativeLayout>


        <LinearLayout
            android:id="@+id/llRow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="20dp"
            android:paddingBottom="15dp"
            android:gravity="center_vertical"
            android:orientation="vertical">


            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="11dp"
                android:layout_marginEnd="8dp"
                android:layout_marginTop="11dp"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="75pt"
                        android:layout_height="wrap_content"
                        android:text="ID"
                        android:textSize="15sp"
                        android:textStyle="bold"/>

                    <HorizontalScrollView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:scrollbarThumbHorizontal="@android:color/transparent">
                        <TextView
                            android:id="@+id/id_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="id"
                            android:textSize="15sp"
                            android:textStyle="italic" />
                    </HorizontalScrollView>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="75pt"
                        android:layout_height="wrap_content"
                        android:text="Given on"
                        android:textSize="15sp"
                        android:textStyle="bold"/>

                    <TextView
                        android:id="@+id/givenOn_tv"
                        android:layout_width="75pt"
                        android:layout_height="wrap_content"
                        android:text="givenOn"
                        android:textSize="15sp"
                        android:textStyle="italic" />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="75pt"
                        android:layout_height="wrap_content"
                        android:text="Given By"
                        android:textSize="15sp"
                        android:textStyle="bold"/>

                    <TextView
                        android:id="@+id/givenBy_tv"
                        android:layout_width="75pt"
                        android:layout_height="wrap_content"
                        android:text="given by"
                        android:textSize="15sp"
                        android:textStyle="italic" />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="75pt"
                        android:layout_height="wrap_content"
                        android:text="Link Type"
                        android:textSize="15sp"
                        android:textStyle="bold"/>

                    <TextView
                        android:id="@+id/linkType_tv"
                        android:layout_width="75pt"
                        android:layout_height="wrap_content"
                        android:text="link type"
                        android:textSize="15sp"
                        android:textStyle="italic" />

                </LinearLayout>
                <LinearLayout
                    android:id="@+id/noteLink_ll"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="75pt"
                        android:layout_height="wrap_content"
                        android:text="Note Link"
                        android:textSize="15sp"
                        android:textStyle="bold"/>

                    <TextView
                        android:id="@+id/noteLink_tv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="note link"
                        android:textSize="15sp"
                        android:textStyle="italic" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>